<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigTextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="MiddleTextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="SmallTextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>
