<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.movieapplication.utils.MovieUtil" />

        <variable
            name="model"
            type="com.example.movieapplication.presenter.model.MovieDetail.Actor" />
    </data>

    <LinearLayout
        android:layout_width="@dimen/item_actor_size"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:onClick="@{(view) -> model.onClick(view, model.name)}"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/item_actor_profile_size"
            android:layout_height="@dimen/item_actor_profile_size"
            bind:setCircleImageUrl="@{MovieUtil.INSTANCE.getActorProfile(model.profileUrl)}" />

        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/item_actor_padding"
            android:paddingEnd="@dimen/item_actor_padding"
            android:text="@{model.name}"
            tools:text="name" />

    </LinearLayout>
</layout>