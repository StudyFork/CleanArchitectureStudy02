<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/firstHomeScreen">

    <fragment
        android:id="@+id/firstHomeScreen"
        android:name="com.mhuman.navigation.FirstHomeScreen"
        android:label="fragment_first_home_screen"
        tools:layout="@layout/fragment_first_home_screen">
        <action
            android:id="@+id/action_firstHomeScreen_to_twoDepthScreen"
            app:destination="@id/twoDepthScreen" />
    </fragment>

    <fragment
        android:id="@+id/secondHomeScreen"
        android:name="com.mhuman.navigation.SecondHomeScreen"
        android:label="fragment_second_home_screen"
        tools:layout="@layout/fragment_second_home_screen" />
    <fragment
        android:id="@+id/thirdHomeScreen"
        android:name="com.mhuman.navigation.ThirdHomeScreen"
        android:label="fragment_third_home_screen"
        tools:layout="@layout/fragment_third_home_screen" />
    <fragment
        android:id="@+id/twoDepthScreen"
        android:name="com.mhuman.navigation.TwoDepthScreen"
        android:label="screen_two_depth"
        tools:layout="@layout/screen_two_depth">
        <argument
            android:name="param_count"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_global_twoDepthScreen"
        app:destination="@id/twoDepthScreen" />
</navigation>